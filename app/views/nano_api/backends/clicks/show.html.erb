<%= image_tag(@click_params[:pixel_url]) %>

<% if 'get' == @click_params[:method] and @click_params[:params].blank? %>
  <script type="text/javascript">
		var redirect = function(timeout, wrap_url){
			setTimeout(function(){
				window.location.href = wrap_url + '<%= raw @click_params[:url] %>';
			}, timeout);
		}
  </script>
  <%= render 'counter' %>
<% else %>
  <%= render 'form', form: @click_params %>

  <script type="text/javascript">
		var redirect = function(timeout){
			setTimeout(function(){
				document.getElementById('nano_api_click_form').submit();
			}, timeout);
		}
  </script>
<% end %>

<script type="text/javascript">
	redirect(window.timeout || 0, window.wrapUrl || '');
</script>
